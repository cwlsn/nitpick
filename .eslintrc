{
	"parser": "babel-eslint",
	"extends": [
		"airbnb-base",
		"prettier",
		"plugin:flowtype/recommended"
	],
	"plugins": [
		"prettier",
		"flowtype",
		"flowtype-errors"
	],
	"env": {
		"jest": true
	},
	"rules": {
		"flowtype-errors/show-warnings": 1,
		"no-console": 0,
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"semi": false,
				"trailingComma": "all",
				"useTabs": true
			}
		]
	}
}
