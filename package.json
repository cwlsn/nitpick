{
	"name": "nitpick",
	"version": "0.3.0",
	"description": "A command line tool to make you feel bad about how you set up your JavaScript app. ðŸ™ˆ",
	"license": "MIT",
	"repository": "cwlsn/nitpick",
	"main": "dist/cli.js",
	"author": {
		"name": "Connor Wilson",
		"email": "me@cwlsn.com",
		"url": "https://cwlsn.com"
	},
	"engines": {
		"node": ">=6"
	},
	"bin": {
		"nitpick": "dist/cli.js"
	},
	"nitpick": {
		"ignore": []
	},
	"files": [
		"dist",
		"index.js"
	],
	"scripts": {
		"test": "jest",
		"coverage": "npm test -- --coverage",
		"postcoverage": "opn coverage/lcov-report/index.html",
		"lint": "eslint src test",
		"flow": "flow check",
		"clean": "rimraf dist",
		"prebuild": "npm run clean",
		"build": "babel src -d dist",
		"watch": "npm-watch",
		"patch": "npm version patch && npm publish",
		"minor": "npm version minor && npm publish",
		"major": "npm version major && npm publish",
		"prepublishOnly": "npm run lint && npm test && npm run build",
		"postpublish": "git push origin master --follow-tags"
	},
	"watch": {
		"test": "{src,test}/*.js",
		"lint": "{src,test}/*.js",
		"build": "src"
	},
	"jest": {
		"testEnvironment": "node"
	},
	"keywords": [
		"nitpick",
		"eslint",
		"cli",
		"cli tool"
	],
	"dependencies": {
		"chalk": "^2.3.2",
		"meow": "^4.0.0"
	},
	"devDependencies": {
		"babel-cli": "^6.18.0",
		"babel-eslint": "^8.0.0",
		"babel-jest": "^22.1.0",
		"babel-preset-env": "^1.1.8",
		"babel-preset-flow": "^6.23.0",
		"babel-preset-stage-2": "^6.18.0",
		"documentation": "^5.3.2",
		"eslint": "^4.17.0",
		"eslint-config-airbnb-base": "^12.0.0",
		"eslint-config-prettier": "^2.9.0",
		"eslint-plugin-flowtype": "^2.42.0",
		"eslint-plugin-flowtype-errors": "^3.5.1",
		"eslint-plugin-import": "^2.2.0",
		"eslint-plugin-prettier": "^2.6.0",
		"flow-bin": "^0.64.0",
		"jest-cli": "^22.1.4",
		"npm-watch": "^0.3.0",
		"opn-cli": "^3.1.0",
		"prettier": "^1.10.2",
		"rimraf": "^2.6.1"
	}
}
